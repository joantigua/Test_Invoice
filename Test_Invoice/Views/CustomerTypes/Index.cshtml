@model IEnumerable<Test_Invoice.Models.CustomerType>

@{
    ViewData["Title"] = "Index";
}

<h1>Customer Types</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerTypeDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerTypeDescription)
            </td>
            <td>
                <a  class="btn btn-dark"asp-action="Edit" asp-route-id="@item.CustomerTypeId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CustomerTypeId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CustomerTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
